<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FAQsActivity"
    tools:ignore="HardcodedText, ContentDescription"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_collapseMode="pin"
        android:background="#4D2D18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/PopupMenuOverlay">


        <ImageView
            android:id="@+id/overlay_image"
            android:layout_width="152dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:contentDescription=""
            android:elevation="2dp"
            android:src="@drawable/wirwo_wordmark"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            tools:ignore="ContentDescription,HardcodedText" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/faqs_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lighterGreen"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Frequently-Asked Questions"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/faqs_layout"
        tools:ignore="UselessParent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp">



        </androidx.constraintlayout.widget.ConstraintLayout>


     <ScrollView
         android:layout_width="wrap_content"
         android:layout_height="700dp">


         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="30dp"
             android:layout_marginRight="30dp"
             app:cardCornerRadius="10dp"
             android:layout_marginTop="0dp"
             app:cardElevation="20dp"
             android:backgroundTint="#102820">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:focusable="true"
                 android:orientation="vertical"
                 android:padding="24dp">

                 <TextView
                     android:id="@+id/question1Text"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:fontFamily="@font/montserrat_bold"
                     android:text="What is the WIRWO 2.0 Vermicomposter App?"
                     android:textColor="@color/white"
                     android:textSize="20sp"
                     android:textStyle="bold" />


                 <TextView
                     android:id="@+id/Answer1Text"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:fontFamily="@font/montserrat_regular"
                     android:text="The WIRWO App is a mobile application that helps you monitor and control your vermicomposting system.
It allows you to view real-time sensor readings, receive alerts for critical conditions, and remotely control actuators (if available) to optimize the environment for your worms."
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/Question2Text"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:fontFamily="@font/montserrat_bold"
                     android:text="How do I create an account?"
                     android:textColor="@color/white"
                     android:textSize="20sp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/Answer2_1Text"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:fontFamily="@font/montserrat_regular"
                     android:text="There are two ways to access the app, depending on whether you already have an account."
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/Answer2_2Text"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:fontFamily="@font/montserrat_bold"
                     android:text="Existing User"
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:textStyle="bold"
                     android:layout_marginTop="8dp"/>

                 <TextView
                     android:id="@+id/Answer2_3Text"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:fontFamily="@font/montserrat_regular"
                     android:text="\n1. Locate the login page. This is the app's opening page after the splash screen.
\n\n2. Once on the login page, enter your username and password in the designated fields. These fields are labeled Email and Password.
\n\n3. Click the box for remembering the details for flawless login next time or directly click the Login button.
\n\n4. If your credentials are correct, the app will automatically direct you to your dashboard, which is your primary landing page within the app.
"
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/Answer2_4Text"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:fontFamily="@font/montserrat_bold"
                     android:text="\nNew User"
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/Answer2_5Text"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:fontFamily="@font/montserrat_regular"
                     android:text="\n1. If you are new to the app, you will need to create an account. Click the Here word in the Login Page to direct you to the Sign-Up Page.
\n\n2. On the signup page, enter your desired username, email, and password. You will likely be asked to enter your password twice for confirmation purposes.
\n\n3. Click the Register button.
\n\n4. The app will ask you to check your email to verify the email address you used for the registration.
\n\n4. Upon successful verification, the email will automatically direct you to the Login Page where you will proceed on doing the steps provided above."
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/Tips_Text"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:fontFamily="@font/montserrat_regular"
                     android:text="\n\nTips:
\nIf you are having trouble logging in, make sure you are using the correct username and password.
\n\nPasswords are case-sensitive, so double-check that your caps lock key is off.
\n\nSome apps offer the option to remember your login credentials. This can be convenient, but be mindful of using this feature on public devices.
\n\nIf you are having trouble logging in, make sure you are using the correct username and password.
\n\nPasswords are case-sensitive, so double-check that your caps lock key is off.
\n\nSome apps offer the option to remember your login credentials. This can be convenient, but be mindful of using this feature on public devices.
"
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     android:textStyle="bold" />




             </LinearLayout>

         </androidx.cardview.widget.CardView>

       </RelativeLayout>

     </ScrollView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>





