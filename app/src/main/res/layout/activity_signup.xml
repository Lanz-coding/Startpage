<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CABA9C"
    tools:context=".SigninActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#4D2D18"
        android:layout_alignParentTop="true"
        app:popupTheme="@style/PopupMenuOverlay">

        <ImageView
            android:id="@+id/overlay_image"
            android:layout_width="152dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:contentDescription=""
            android:elevation="2dp"
            android:src="@drawable/wirwo_wordmark_1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            tools:ignore="ContentDescription,HardcodedText" />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            app:cardCornerRadius="30sp"
            android:layout_marginBottom="50sp"
            android:layout_marginTop="1050dp"
            app:cardElevation="20sp"
            android:backgroundTint="#4C6444">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24sp"
                android:focusable="true">

                <TextView
                    android:id="@+id/loginText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="SIGN UP"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_marginTop="-10dp"
                    android:text="Sign up to start using WIRWO 2.0 services!"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signin_username"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:backgroundTint="@color/white"
                    app:boxBackgroundMode="none"
                    app:passwordToggleEnabled="false"
                    app:hintEnabled="false"
                    android:gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signin_username1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:drawablePadding="8dp"
                    android:hint="Username"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/create_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:backgroundTint="@color/white"
                    app:boxBackgroundMode="none"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="false"
                    android:gravity="center"
                    app:passwordToggleTint="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/create_password1"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/baseline_lock_24"
                        android:drawablePadding="8sp"
                        android:hint="Create Password"
                        android:inputType="textPassword"
                        android:padding="8sp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:backgroundTint="@color/white"
                    app:boxBackgroundMode="none"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="false"
                    android:gravity="center"
                    app:passwordToggleTint="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirm_password1"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:backgroundTint="@color/white"
                        android:drawableLeft="@drawable/baseline_lock_24"
                        android:drawablePadding="8sp"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:padding="8sp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/signin_button"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginTop="10sp"
                    android:backgroundTint="#102820"
                    android:text="REGISTER"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:cornerRadius="20sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
