<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SpinnerTheme" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <!-- Background color -->
        <item name="android:background">@color/lighterGreen</item>
        <!-- Dropdown arrow color -->
        <item name="android:popupBackground">@color/lighterGreen</item>
        <!-- Text color -->
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/darkGreen</item>
    </style>

    <style name="MyAutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/black</item>
        <!-- Add any other attributes you want to customize -->
    </style>


    <!-- Define your custom switch style -->
    <style name="rememberMeSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">#4C6444</item> <!-- Toggle color -->
        <item name="android:trackTint">#FFFFFF</item>
    </style>

    <!-- Define your default app color -->
    <color name="defaultAppColor">#4D2D18</color>

    <!-- Define your popup menu overlay style -->
    <style name="PopupMenuOverlay" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorPopupMenuBackground</item>
    </style>

</resources>
